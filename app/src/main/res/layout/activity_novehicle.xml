<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tv_user"
        android:layout_marginBottom="20dp"


        >

        <RelativeLayout
            android:id="@+id/reg_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/regno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/Ed_regno"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="REGISTRATION NO"
                    android:inputType="textCapCharacters"
                    android:padding="5dp"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </android.support.design.widget.TextInputLayout>


            <requestFocus />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/eticket_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_layout"
            android:layout_marginTop="10dp">


            <!--  Password Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/Ed_eticketno"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Challan No/Eticket No"
                    android:inputType="textCapCharacters"
                    android:maxLength="4"
                    android:padding="5dp"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eticket_layout"
            android:layout_marginTop="10dp"
            android:gravity="center"


            >


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/Btn_rcdetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/buttonbackground"
                android:gravity="center"
                android:text="GET DETAILS"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"

                />

        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/Tv_user"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearlayout2"
        android:background="@color/primary"
        android:ems="10"
        android:gravity="left|center"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text="Vehicle Challans"
        android:textColor="@color/textColorPrimary"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/navigationBarColor"
        android:contentDescription="@null"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="Powered By : MOTHER TECHNOLOGIES PROJECT VENTURES"
        android:textColor="#ffffff"
        android:textStyle="bold|italic" />

</RelativeLayout>