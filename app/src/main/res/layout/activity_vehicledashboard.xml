<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Tv_user">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
      >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:padding="5dp"

                    android:background="@drawable/minidashbuttonback"
                    android:text="List Of My Vehicles"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:id="@+id/Btn_listmyvehicles"
                    android:textStyle="bold"

                    android:layout_marginRight="5dp"
                   />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:text="My Vehicle Purchases"
                    android:padding="5dp"
                    android:textColor="@color/secondary_text"
                    android:background="@drawable/minidashbuttonback"
                    android:textSize="12sp"
                    android:id="@+id/Btn_myvehpurchases"
                    android:textStyle="bold"

                    android:layout_marginLeft="5dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="Soldout Vehicle/Change Of Ownership"
                    android:textColor="@color/secondary_text"
                    android:background="@drawable/minidashbuttonback"
                    android:textSize="12sp"
                    android:id="@+id/Btn_soldout"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/Btn_addresschange"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/minidashbuttonback"
                    android:text="Change Of Address"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="Not Having Vehicles But Receiving Challans"
                    android:textColor="@color/secondary_text"
                    android:background="@drawable/minidashbuttonback"
                    android:textSize="12sp"
                    android:id="@+id/Btn_Novehicle"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="Find The Pending Challans"
                    android:textColor="@color/secondary_text"
                    android:background="@drawable/minidashbuttonback"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:id="@+id/Btn_pendingchallans"
                    android:textStyle="bold"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center">


                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:text="My Payment's History"
                    android:textColor="@color/secondary_text"
                    android:background="@drawable/minidashbuttonback"
                    android:id="@+id/Btn_reg_vehicles"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Any Suggestions/Feedback For TIES"
                    android:textColor="@color/secondary_text"
                    android:background="@drawable/minidashbuttonback"
                    android:id="@+id/Btn_reports_complaints"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>










        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/Tv_user"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearlayout2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="MY VEHICLE INFO"
        android:textColor="@color/textColorPrimary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:background="@color/primary"
        android:gravity="left|center"
        />

    <TextView
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:text="Powered By : MOTHER TECHNOLOGIES PROJECT VENTURES"
        android:textColor="#ffffff"
        android:background="@color/navigationBarColor"
        android:textStyle="bold|italic"
        android:gravity="center" />

</RelativeLayout>